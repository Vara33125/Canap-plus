{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}
{% block description %} Modification du mot de passe{% endblock %}
{% block keywords %} site, adresse, modifier, compte, informations, mot de passe{% endblock %}
{% block style %}<link rel="stylesheet" href="/styles/edit.css">{% endblock %}

{% block main %}

        <h1 class="text-center my-5">Modifier mon mot de passe</h1>
        <div class="container-fluid col-md-7 ">
            <div class="m-2 p-2  ">
                {{ form_start(form) }}
                    
                    <div class=" smview  w-100 d-flex flex-column align-items-center">
                        <div class="col-lg-12  row-cols-sm-1 pe-md-1 my-1 d-flex flex-column input">
                            <label class="my-1" for="form_currentPassword"  > Mot de passe actuel  <div class="text-danger"><small><em>{{form_errors(form.currentPassword)}}</em></small></div></label>
                            {{form_widget(form.currentPassword, {'attr': { 'autofocus':'autofocus'}})}}
                        </div>
                        <div class="col-lg-12 row-cols-sm-1  ps-md-1 my-1 d-flex flex-column input">
                        <label for="form_password_first"> Nouveau mot de passe <div class="text-danger"><small><em>{{form_errors(form.password.first)}}</em></small></div></label>
                        {{form_widget(form.password.first, {'attr': { 'placeholder':'Au moins 12 caractères'}})}}
                        <div>
                        <small><em>Le mot de passe doit contenir au mois une lettre majuscule, minuscule, un chiffre et un caractère spécial.</em></small>
                        </div>
                    </div >
                    <div class="col-lg-12 row-cols-sm-1  ps-md-1 my-1 d-flex flex-column input">
                        <label for="form_password_second">Confirmation nouveau mot de passe</label>
                        {{form_widget(form.password.second)}}
                         <div class="text-danger">{{form_errors(form.password.second)}}</div>
                    </div>                       
                    <div class="d-flex justify-content-center mt-3">
                        <input formnovalidate class="btn btn-colorGreen rounded" type="submit" style="height: 40px; " value="Modifier mon mot de passe"> </input>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
 {% endblock %}       
        
           